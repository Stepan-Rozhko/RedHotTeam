<!doctype html>
<html lang="{{ request.locale.iso_code }}" class="no-js overflow-y-scroll">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <link rel="preconnect" href="https://cdn.shopify.com" crossorigin>
    <title>{{ page_title | escape }}</title>

    {% if page_description %}
      <meta name="description" content="{{ page_description | escape }}">
    {% endif %}

    {% if canonical_url != blank %}
      <link rel="canonical" href="{{ canonical_url }}">
    {% endif %}

    {{ 'main.css' | asset_url | stylesheet_tag: preload: true }}
    {{ content_for_header }}

    <script>
      if (Shopify.designMode) {
        document.documentElement.classList.add('shopify-design-mode');
      }
    </script>
  </head>
  {%- assign page_title_handle = page_title | handle -%}
  {%- assign template_name_handle = template.name | handle | default: 'unassigned' -%}
  <body class="{{ page_title_handle }} template-{{ template_name_handle }}{% if template.suffix != blank %} template-{{ template_name_handle }}-{{ template.suffix | handle }}{% endif %}">
    {% section 'header' %}
    <main role="main">
      {{ content_for_layout }}
    </main>
  </body>
</html>
